#include <iostream>

int main()
{
	std::cout << "用sizeof 將以下的資料型態顯示大小 char, int, long, double, float, bool" << std::endl;
	
	/*
	char n_char;
	int n_int;
	long n_long;
	double n_double;
	float n_float;
	bool n_bool;
	
	std::cout   << "[答]" << std::endl
				<< "Char : " << sizeof(n_char)
